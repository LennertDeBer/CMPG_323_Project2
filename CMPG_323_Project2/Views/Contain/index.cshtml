@model IEnumerable<CMPG_323_Project2.ViewModel.AlbumViewModelPhoto>

<style>
    .avatar {
        vertical-align: middle;
        width: 410px;
        height: 175px;
    }
</style>
<p>
    <a asp-controller="Photo" asp-action="Create">UploadImage</a>
</p>
<table class="table table-striped">
    <tr>
        <td>User name</td>
        <td>Photo's</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.albumVm.AlbumName</td>
            <td>
                <img src="@item.photoVm.PhotoUrl" alt="@item.photoVm.PhotoUrl" class="avatar" />
            </td>
            <td>
                <a asp-controller="MetaData" asp-action="Edit" asp-route-id="@item.photoVm.PhotoId">Edit</a> |
                <a asp-controller="MetaData" asp-action="Details" asp-route-id="@item.photoVm.PhotoId">Details</a> |
                <a asp-controller="Photo" asp-action="Delete" asp-route-id="@item.photoVm.PhotoId">Delete</a>
            </td>
        </tr>
    }
</table>

@{
}