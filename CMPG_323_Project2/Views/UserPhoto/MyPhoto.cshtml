@model IEnumerable<CMPG_323_Project2.ViewModel.UserViewModelPhoto>

<style>
    .avatar {
        vertical-align: middle;
        width: 200px;
        height: 150px;
    }
</style>

<table class="table table-striped">
    <tr>
        <td>User name</td>
        <td>Pic</td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.userVm.UserName</td>
            <td>
                <img src="@item.photoVm.PhotoUrl" alt="@item.photoVm.PhotoUrl" class="avatar" />
            </td>
        </tr>
    }
</table>

@{
}