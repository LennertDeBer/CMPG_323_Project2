@model IEnumerable<CMPG_323_Project2.ViewModel.UserViewModelPhoto>

<style>
    .avatar {
        vertical-align: middle;
        width: 100px;
        height: 100px;
    }
</style>
<form action="/MetaData/Search/?searchNeed&?colNeed" method="post">
    <select name="colNeed" id="Column">
        <option value="Geolocation">Geolocation</option>
        <option value="Tags">Tags</option>
        <option value="Captured_Date">Captured Date</option>
        <option value="Captured_By">Captured By</option>
    </select>
    <input type="text" name="searchNeed" />
    <input type="submit" value="Search" />
</form>
<p>
    <a asp-controller="PhotoMetaData" asp-action="Create" class="btn btn-sm btn-success">UploadImage</a>
</p>
<table class="table table-striped">
    <tr>
        <td>User name</td>
        <td>Photo's</td>
    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.userVm.UserName</td>
    <td>
        <img src="@item.photoVm.PhotoUrl" alt="@item.photoVm.PhotoUrl" class="avatar" />
    </td>
    <td>
        <a asp-controller="MetaData" asp-action="Edit" asp-route-id="@item.photoVm.PhotoId" class="btn btn-sm btn-primary">Edit</a> |

        <a asp-controller="PhotoMetaData" asp-action="Details" asp-route-id="@item.photoVm.PhotoId" class="btn btn-sm btn-info">Details</a> |
        <a asp-controller="Photo" asp-action="Delete" asp-route-id="@item.photoVm.PhotoId" class="btn btn-sm btn-danger">Delete</a> |
        <a asp-controller="UserPhoto" asp-action="ShareTo" asp-route-id="@item.photoVm.PhotoId" class="btn btn-sm btn-light">Share</a> |
        <a asp-controller="UserPhoto" asp-action="Download" asp-route-id="@item.photoVm.PhotoId" class="btn btn-sm btn-outline-dark">Download</a>
    </td>
</tr>
    }
</table>

@{
}